<h2 class="text-center mt-4"><%= @article.title %></h2>
<div class="container">
    <div class="row justify-content-center ">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    Autor
                </div>
                <div class="card-body">
                    <div class="card-text text-left"><%= simple_format(@article.description) %></div>
                    <%= link_to "Editar", edit_article_path(@article), class: "btn btn-outline-primary" %>
                    <%= link_to "Eliminar", article_path(@article), data: { turbo_method: :delete }, class: "btn btn-outline-danger" %>
                </div>
                <div class="card-footer text-body-secondary">
                    <small>
                        Creado hace <%= time_ago_in_words(@article.created_at).gsub("days", "días").gsub("less than a minute", "menos de un minuto")%>, editado hace<%= time_ago_in_words(@article.updated_at).gsub("days", "días").gsub("less than a minute", "menos de un minuto") %>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>