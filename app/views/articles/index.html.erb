<div id="page-content">
    <h1 class="text-center mt-4">Lista de productos</h1>
    <div class="container">
        <% @articles.each do |article| %>
            <div class="row justify-content-center ">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header font-italic">
                            Autor
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
                            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                            <%= link_to "Visitar", article_path(article), class: "btn btn-outline-success" %>
                            <%= link_to "Editar", edit_article_path(article), class: "btn btn-outline-primary" %>
                            <%= link_to "Eliminar", article_path(article), data: { turbo_method: :delete }, class: "btn btn-outline-danger" %>
                        </div>
                        <div class="card-footer text-body-secondary">
                            <small>
                                Creado hace <%= time_ago_in_words(article.created_at).gsub("days", "días")%>, editado hace<%= time_ago_in_words(article.updated_at).gsub("days", "días") %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>